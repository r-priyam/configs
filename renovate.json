{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:base", "helpers:pinGitHubActionDigests", "group:allNonMajor", ":disableDependencyDashboard"],
	"labels": ["Meta: Dependencies"],
	"schedule": ["before 12pm every weekday"],
	"timezone": "Asia/Kolkata",
	"lockFileMaintenance": {
		"enabled": true,
		"automerge": true
	},
	"packageRules": [
		{
			"matchUpdateTypes": ["minor", "patch"],
			"matchCurrentVersion": "!/^0/",
			"automerge": true,
			"automergeStrategy": "squash"
		}
	]
}